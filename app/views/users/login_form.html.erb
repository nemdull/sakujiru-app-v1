<%# login form %>
<%= form_with url:login_path, class: "contents", local: true do |form| %>
<%# error(表示されない??配置する) %>

  <%# ログイン画面　%>
  <div class="hero min-h-screen bg-base-200">
    <div class="flex-col justify-center hero-content lg:flex-row">
      <%# ログイン画面　左　%>
      <div class="text-center lg:text-left">
        <h1 class="mb-5 text-5xl font-bold">作字する？</h1> 
        <p class="mb-5">Sakujiruは作字に関わる人を応援するプラットフォームです</p>
      </div> 
      <%# ログイン画面　右　%>
      <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
        <div class="card-body">
          <%# email %>
          <div class="form-control">
            <label class="label">
              <%= form.label :email, class: "label-text" %>
            </label>
            <%= form.text_field :email,  placeholder: "name", class: "input input-bordered" %>
          </div> 
          <%# password %>
          <div class="form-control">
            <label class="label">
              <%= form.label :password, class: "label-text" %>
            </label>
            <%= form.text_field :password,  placeholder: "password", class: "input input-bordered" %>
            <label class="label">
              <a href="#" class="label-text-alt">Forgot password?</a>
            </label>
          </div>
          <%# login %>
          <div class="form-control mt-6">
            <%= form.submit value: "Login", class: "btn btn-primary" %>
          </div>

        </div>
      </div>

    </div>
  </div>
<% end %>
